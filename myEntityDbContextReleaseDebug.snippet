      <Title>DbContextReleaseDebug</Title>
      <Shortcut>myEntity</Shortcut>
    </Header>
    <Snippet>
      <Code Language="cSharp">
        <![CDATA[
          #if DEBUG
                  public NameListDbContext()
                      : base("name=NameListDbContext")
