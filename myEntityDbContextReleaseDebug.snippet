                  }
          #else
                  public NameListDbContext()
                      : base("name=NameListDbContextRelease")
                  {
                      Database.SetInitializer(new MigrateDatabaseToLatestVersion<NameListDbContext, Configuration>());
                  }
          #endif
        ]]>
      </Code>
    </Snippet>
